<form class="box m-4" id="login-form">
    <div class="field">
        <label class="label">Email</label>
        <div class="control">
            <input class="input" type="email" placeholder="e.g. alex@example.com" id="email-login" />
        </div>
    </div>
    <div class="field">
        <label class="label">Password</label>
        <div class="control">
            <input class="input" type="password" placeholder="********" id="password-login" />
        </div>
    </div>

    <button class="button is-primary">Sign in</button>
</form>